rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Documents folder - allow read/write for authenticated users
    // For this test assignment, we'll allow authenticated access
    // In production, you might want to add user-specific folders
    
    match /documents/{fileName} {
      // Allow read if authenticated
      allow read: if request.auth != null;
      
      // Allow write if authenticated
      allow write: if request.auth != null;
      
      // Allow delete if authenticated
      allow delete: if request.auth != null;
    }
    
    // Public documents folder - anyone can read, authenticated users can write
    match /public/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Temporary permissive rules for testing (expires Nov 29, 2025)
    // Remove this in production and use specific rules above
    match /{allPaths=**} {
      allow read, write: if request.time < timestamp.date(2025, 11, 29);
    }
  }
}
